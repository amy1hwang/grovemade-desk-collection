//variables
$hdr-gray: #424242;
$ftr-gray: #4a4d51;
$din: "din-2014";

//mixin
@mixin center {
  display: flex;
  justify-content: center;
  align-items: center;
}

@mixin wu ($letter-spacing, $size, $weight) {
  color: white;
  text-transform: uppercase;
  letter-spacing: $letter-spacing;
  font-size: $size;
  font-weight: $weight;
}

@mixin font-din {
  font-family: $din;
  color: $hdr-gray;
}
.font-din {
  @include font-din;
}

@mixin font-georgia {
  font-family: georgia;
  color: $hdr-gray;
}
.font-georgia {
  @include font-georgia;
}

@mixin cover {
    width: 100vw;
    height: 670px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
@mixin cover-text {
  .text-on-cover {
    @include wu(20px, 5em, 400);
    line-height: 60px;
    margin-bottom: 30px;
  }

  .text-on-cover-smaller {
    @include wu(20px, 3em, 400);
    line-height: 60px;
  }
}


