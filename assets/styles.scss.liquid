//navbar-header
.header {
  width: 100%;
  z-index: 3;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 20px 0;
  box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  transition: all .5s ease-in-out;
}

.logo {
  margin-right: 30px;
  color: $ftr-gray;
  text-decoration: none;
}

.navbarlogo {
  width: 282px;
  transition: width .5s ease-in-out;
}

.fixedbarlogo {
  transition: all 1s ease-in-out;
  opacity: 0;
}



.nav-item {
  &:last-of-type {
    margin-left: 60px;
  }
  @include wu(2px, 1em, 500);
  color: $ftr-gray;
  cursor: pointer;
  transition: all .5s ease-in-out;
  &:hover, &:active {
    color: $ftr-gray;
    text-decoration: none;
  }
  &:visited {
    color: $ftr-gray;
  }
}

.cart-container {
  position: relative;
  width: 50px;
  height: 30px;
  &:hover {
    .cart-clicked {
      height: auto;
      opacity: 1;
    }
  }
}

.navbar-cart {
  cursor: pointer;
  width: 50px;
  margin-top: -10px;
  h1 {
    display: inline-block;
    margin-left: 5px;
    @include wu(null, 1.2em, 300);
    color: $ftr-gray;
    text-decoration: none;
  }
  img {
    width: 25px;
    height: auto;
  }
}

.cart-clicked {
  z-index: 3;
  width: 424px;
  position: absolute;
  top: 58px;
  right: -25px;
  height: 0;
  overflow: hidden;
  opacity: 0;
  transition: opacity .5s ease-out;
}

.cart-header {
  background: $hdr-gray;
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
  a {
    padding-left: 20px;
    @include wu(5px, 1em, 300);
    text-decoration: none;
  }
}
.cart-main {
  background: #F2F2F2;
  padding: 14px 16px;
  .added-item {
    background: white;
  }
  .subtotal {
    margin-top: 14px;
    display: flex;
    justify-content: space-between;
    font-size: 1em;  }
  .checkout-btn {
    width: 392px;
    height: 44px;
    border: none;
    border-radius: 0;
    background: $hdr-gray;
    margin: 14px 0;
    @include wu(12px, 18px, 300);
    &:hover, &:active, &:focus {
      outline: none;
      border: none;
    }
  }
  h4 {
    @include wu(2.75px, 11px, 200);
    color: #E76E7D;
  }
}

.arrow-down {
  width: 12px;
}

.fixed {
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  padding: 10px 0;
  background-color: white;
  .navbarlogo {
    width: 0;
  }
  .fixedbarlogo {
    opacity: 1;
    float: left;
    cursor: pointer;
  }
