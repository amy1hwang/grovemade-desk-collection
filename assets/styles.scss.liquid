  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  @include wu(12px, 3.6em, 400);
  pointer-events: none;
}

.index-slide {
  background-position: center;
  background-size: cover;
  margin-right: 0;
  padding-bottom: 40%;
